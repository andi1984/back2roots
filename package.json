{
  "name": "back2roots",
  "version": "0.2.0",
  "description": "",
  "main": "server.js",
  "engines": {
    "node": "12.x"
  },
  "watch": {
    "start": {
      "patterns": [
        "templates",
        "md"
      ],
      "extensions": "twig,md"
    }
  },
  "scripts": {
    "test": "jest",
    "tsc": "tsc",
    "dev": "npx concurrently \"npx http-server dist\" \"npm run watch-content\" \"npm run watch\"",
    "watch-content": "npm-watch",
    "watch": "ts-node-dev --respawn --transpileOnly ./build.ts",
    "build": "tsc && node ./build/build.js",
    "assets": "echo \"Run your asset generation script here putting assets into the dist folder\"",
    "start": "npm run build && npm run assets",
    "release": "release-it"
  },
  "author": "Andreas Sander <mail@andi1984.de>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@types/jest": "^25.2.1",
    "@types/markdown-it": "0.0.9",
    "@types/node": "^13.13.2",
    "dotenv": "^8.2.0",
    "html-minifier": "^4.0.0",
    "markdown-it": "^10.0.0",
    "markdown-it-front-matter": "^0.2.1",
    "markdown-it-replace-link": "^1.0.1",
    "rimraf": "^3.0.2",
    "rss": "^1.2.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "twig": "^1.15.1",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "jest": "^25.3.0",
    "npm-watch": "^0.6.0",
    "release-it": "^13.5.6",
    "ts-jest": "^25.3.1"
  },
  "release-it": {
    "github": {
      "release": true
    }
  }
}
